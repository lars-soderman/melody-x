{
  "name": "melodikryss",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "clear && jest",
    "test:e2e": "clear && playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "typecheck": "tsc --noEmit",
    "db:dev:migrate": "prisma migrate dev",
    "db:backup:init": "mkdir -p backups",
    "postinstall": "prisma generate",
    "generate-types": "supabase gen types typescript --project-id kpgrevswkmklxjqtroww --schema public > src/types/supabase.ts",
    "db:migration:generate": "prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script > migrations/$(date +%Y%m%d%H%M%S)_migration.sql"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.46.1",
    "geist": "^1.3.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2",
    "next": "14.2.15",
    "react": "^18",
    "react-dom": "^18",
    "use-debounce": "^10.0.4",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "prisma": "^5.22.0",
    "supabase": "^1.219.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
